{
  "manifest_version": 3,
  "name": "Imaginex",
  "version": "1.0.0",
  "description": "Displays larger size images when hovering over images that are smaller than their actual dimensions",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "identity",
    "scripting",
    "userScripts"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Imaginex",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "oauth2": {
    "client_id": "1054967656600-j262rupqi415tdqv4c0dmjhfkb6rlbpd.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.appdata"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "<all_urls>",
    "https://www.googleapis.com/*"
  ]
}